{
  "name": "dnsmq-messagebus",
  "version": "0.0.4",
  "description": "A message bus implementation for nodes reachable through DNS resolution. Based on Ã˜MQ",
  "main": "lib/index.js",
  "scripts": {
    "test": "./commands/tests:suite.sh",
    "test:unit": "./commands/test:unit.sh",
    "test:dnsnode": "./commands/test:dnsnode.sh",
    "test:externalnode": "./commands/test:externalnode.sh",
    "dev:test:unit": "./commands/test:unit.sh live",
    "dev:test:behaviour": "./commands/test:behaviour.sh live",
    "dev:test:externalnode": "./commands/test:externalnode.sh live",
    "transpile": "./commands/transpile.sh",
    "prepublish": "npm test"
  },
  "betterScripts": {
    "test:unit": {
      "command": "mocha tests/unit",
      "env": {
        "CODE_PATH": "lib"
      }
    },
    "test:unit:live": {
      "command": "mocha --compilers js:babel-register -b -w tests-src/unit",
      "env": {
        "CODE_PATH": "src"
      }
    },
    "test:dnsnode:behaviour": {
      "command": "mocha tests/behaviour",
      "env": {
        "CODE_PATH": "lib"
      }
    },
    "test:dnsnode:behaviour:live": {
      "command": "mocha --compilers js:babel-register -b -w tests-src/behaviour",
      "env": {
        "CODE_PATH": "src"
      }
    },
    "test:externalnode:behaviour": {
      "command": "mocha tests/behaviour",
      "env": {
        "CODE_PATH": "lib",
        "EXTERNAL": true
      }
    },
    "test:externalnode:behaviour:live": {
      "command": "mocha --compilers js:babel-register -b -w tests-src/behaviour",
      "env": {
        "CODE_PATH": "src",
        "EXTERNAL": true
      }
    },
    "start:bus:node": {
      "command": "babel-node tests-src/startDNSNode.js",
      "env": {
        "CODE_PATH": "src",
        "DEBUG": "dnsmq-messagebus:*,-dnsmq-messagebus:SUB:heartbeats,-dnsmq-messagebus:masterbroker:heartbeats,-dnsmq-messagebus:PUB"
      }
    },
    "start:bus:emitter": {
      "command": "babel-node tests/startEmitter.js",
      "env": {
        "CODE_PATH": "src"
      }
    },
    "transpile:package": {"command": "rm -rf lib/* && babel src -d lib"},
    "transpile:tests": {"command": "rm -rf tests/* && babel tests-src -d tests"}
  },
  "keywords": [
    "zmq",
    "brokerless",
    "messagebus",
    "dns"
  ],
  "dependencies": {
    "debug": "^2.6.0",
    "eventemitter3": "2.0.0",
    "lodash": "4.15.0",
    "uuid": "2.0.2",
    "zeromq": "^3.2.0"
  },
  "devDependencies": {
    "babel-cli": "6.14.0",
    "babel-plugin-transform-object-rest-spread": "6.8.0",
    "babel-preset-es2015-node4": "2.1.0",
    "babel-register": "6.14.0",
    "better-npm-run": "0.0.14",
    "mocha": "3.0.2",
    "should": "11.1.0",
    "sinon": "1.17.5"
  },
  "standard": {
    "globals": [
      "describe",
      "it"
    ]
  },
  "author": "Giacomo Triggiano <giacomotriggiano@gmail.com>",
  "license": "MIT",
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gtriggiano/dnsmq-messagebus.git"
  },
  "bugs": {
    "url": "https://github.com/gtriggiano/dnsmq-messagebus/issues"
  },
  "homepage": "https://github.com/gtriggiano/dnsmq-messagebus#readme"
}
